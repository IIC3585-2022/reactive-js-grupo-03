{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "generator-star-spacing": "off",
        "max-len": [
            "warn",
            99
        ],
        "semi": [
            "warn",
            "always"
        ],
        "space-before-function-paren": "off"
    }
}